<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vista.fragmentos.AlbumNewFragment">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/form_track_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/form_track_name" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/form_track_duracion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/form_track_duracion" />

    <Button
        android:id="@+id/create_track"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/create_track" />

    </LinearLayout>

</FrameLayout>